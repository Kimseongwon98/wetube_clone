mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        if video.thumbnail
            video.videoBlock__thumbnail(src=`/${video.src}`, poster=`/${video.thumbnail}`)
        else 
            video.videoBlock__thumbnail(src=`/${video.src}`)
        .video__bar
            
            .videoPlayer__controls#jsController
                .videoPlayer__column
                    span#jsPlayButton 
                        i.fas.fa-play
                .videoPlayer__column
                    input.playBar#jsPlayBar(type="range" value="0" min="0" step="0.0001" )
                .videoPlayer__column
                    span#currentTime 00:00
                    span /
                    span#totalTime 00:00
                    .volume
                        span.volumeBtn#jsVolumeBtn
                            i.fas.fa-volume-down
                        div.volume-bar__container 
                            input.volumeBar#jsVolumeBar(type="range" value="0.5" min="0" max="1" step="0.01" orient="vertical" )
                    span#jsFullScreen
                        i.fas.fa-expand